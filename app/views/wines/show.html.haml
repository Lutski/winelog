.card-show
  .centered-items
    = image_tag @wine.image.url(:medium)
    %h1= @wine.title
    .item{:id => "stars_#{@wine.id}"}
    - if current_user == @wine.user
      = link_to "Edit", edit_wine_path(@wine)
      = link_to "Delete", wine_path(@wine), method: :delete, data: { confirm: "Are you sure?" }

  .wine-info-show
  %p
    %b Vintage:
    = @wine.vintage.year
  %p
    %b Country:
    = @wine.country
  %p
    %b Region:
    = @wine.region
  %p
    %b Grapes:
    = @wine.grape
  %p
    %b Description:
    = @wine.description
  %p
    %b Extra comments:
    = @wine.extracomments
  %p
    %b Created by:
    = @wine.user.email


  = link_to like_wine_path(@wine), method: :put do
    = icon('thumbs-up')
    = @wine.get_upvotes.size



:javascript
    $('#stars_#{@wine.id}').raty({
      path: '/assets',
      readOnly: true,
      score: #{@wine.rating}
    });
